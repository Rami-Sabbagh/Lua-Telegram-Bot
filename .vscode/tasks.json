{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install luarocks module",
            "type": "shell",
            "command": "sudo luarocks make",
            "windows": {
                "command": "wsl sudo luarocks make"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Generate documentation",
            "type": "shell",
            "command": "ldoc .",
            "windows": {
                "command": "wsl ldoc ."
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run luacheck",
            "type": "shell",
            "command": "luacheck .",
            "windows": {
                "command": "wsl luacheck ."
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}